{
	"compilerOptions": {
		"sourceMap": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"jsx": "react",
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES5",
		"strict": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"noImplicitAny": true,
		"typeRoots": ["./node_modules/@types", "./myTypes"],
		"baseUrl": ".",
		"paths": {
			"@hooks/*": ["hooks/*"],
			"@components/*": ["components/*"],
			"@layouts/*": ["layouts/*"],
			"@pages/*": ["pages/*"],
			"@utils/*": ["utils/*"],
			"@typings/*": ["typings/*"]
		},
		"allowSyntheticDefaultImports": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs",
			"moduleResolution": "Node",
			"target": "es5",
			"esModuleInterop": true
		}
	},
	"exclude": [
		"node_modules",
		"dist",
		"@myTypes",
	]
}